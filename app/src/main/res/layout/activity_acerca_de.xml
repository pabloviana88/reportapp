<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Additional.Acerca_de"
    android:orientation="vertical"
    android:padding="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/purple">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/purple"
                >
                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:onClick="retroceso"
                    android:background="@drawable/ic_atras2"
                    />
                <TextView
                    android:id="@+id/etiqueta_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blanco"
                    android:layout_weight="1"
                    android:text="ACERCA DE "
                    android:textSize="25dp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@android:color/transparent"
                    />
            </LinearLayout>
            />
        </LinearLayout>
        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:src="@drawable/icon_ra_o_1024_round"
            android:layout_gravity="center"
            android:layout_margin="30dp"/>
        <TextView
            android:id="@+id/tv_reportapp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reportapp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:textColor="@color/purple"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/tv_version"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VersiÃ³n Beta 1.0"
            android:layout_gravity="center"
            android:textColor="@color/gray"

            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_desarrollado"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desarollado por"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/tv_sga"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Global Apps"
            android:layout_gravity="center"
            android:textColor="@color/gray"
            android:textSize="20dp"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">

            <Button
                android:id="@+id/button_cuenta"
                android:layout_margin="40dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:onClick="terminoscondiciones"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:background="@drawable/vista_contenedorsemibordeadolegales"
                android:textColor="@color/blanco"
                android:textSize="15dp"
                android:text="Legales"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>