<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearPricipalRegistro"
    tools:context=".Additional.user_registration">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/purple">
                <Button
                    android:id="@+id/cancelar"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:onClick="atras"
                    android:background="@drawable/ic_atras2"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blanco"
                    android:text="      REGISTRO"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/mavenpro_regular"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

                <Button
                    android:id="@+id/boton_alta_usuario"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Guardar"
                    android:textSize="15dp"
                    android:fontFamily="@font/mavenpro_regular"
                    android:autoSizeMinTextSize="7dp"
                    android:textAllCaps="false"
                    android:textColor="@color/purple"
                    android:background="@drawable/vista_contenedorbordeado"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/perfil_facebook"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/usuario_o"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foto"
                    android:textAllCaps="false"
                    android:textColor="@color/purple"
                    android:fontFamily="@font/mavenpro_regular"
                    android:textSize="17dp" />
                <EditText
                    android:id="@+id/alta_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    android:drawablePadding="10dp"
                    android:inputType="text"
                    android:fontFamily="@font/mavenpro_regular"
                    android:textSize="17dp"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/purple"
                    />

                <EditText
                    android:id="@+id/alta_apellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apellido"
                    android:drawablePadding="10dp"
                    android:textSize="17dp"
                    android:inputType="text"
                    android:fontFamily="@font/mavenpro_regular"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/purple"
                    />
                <EditText
                    android:id="@+id/alta_correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo"
                    android:drawablePadding="10dp"
                    android:textSize="17dp"
                    android:fontFamily="@font/mavenpro_regular"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/purple"
                    android:inputType="textEmailAddress"
                    />
                <EditText
                    android:id="@+id/alta_celular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Celular (opcional) "
                    android:drawablePadding="10dp"
                    android:inputType="number"
                    android:textSize="17dp"
                    android:fontFamily="@font/mavenpro_regular"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/purple"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/alta_fecha_nacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Fecha de nacimiento"
                        android:drawablePadding="10dp"
                        android:inputType="date"
                        android:textSize="17dp"
                        android:fontFamily="@font/mavenpro_regular"
                        android:textColorHint="@color/gray"
                        android:textColor="@color/purple"
                        android:onClick="mostrar_calendario"
                        />

                </LinearLayout>

                <EditText
                    android:id="@+id/alta_contrasena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contraseña"
                    android:drawablePadding="10dp"
                    android:textSize="17dp"
                    android:inputType="textPassword"
                    android:fontFamily="@font/mavenpro_regular"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/purple"
                    />
                <EditText
                    android:id="@+id/alta_confirmar_contrasena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirmar contraseña"
                    android:drawablePadding="10dp"
                    android:inputType="textPassword"
                    android:textSize="17dp"
                    android:fontFamily="@font/mavenpro_regular"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/purple"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/alta_hombre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hombre"
                            android:textSize="17dp"
                            android:textColor="@color/purple"
                            android:paddingRight="25dp"
                            android:paddingLeft="25dp"
                            android:fontFamily="@font/mavenpro_regular"
                            android:shadowColor="@color/purple"
                            android:checked="true"/>
                        <RadioButton
                            android:id="@+id/alta_mujer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mujer"
                            android:textSize="17dp"
                            android:fontFamily="@font/mavenpro_regular"
                            android:shadowColor="@color/purple"
                            android:paddingRight="25dp"
                            android:paddingLeft="25dp"
                            android:textColor="@color/purple"/>
                    </RadioGroup>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>