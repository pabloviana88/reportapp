<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtHestatusT"
                    android:layout_width="100dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:autoSizeMaxTextSize="17dp"
                    android:autoSizeMinTextSize="10dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/mavenpro_bold"
                    android:text="ESTATUS"
                    android:textColor="@color/gray"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtHfechaT"
                    android:layout_width="100dp"
                    android:layout_height="23dp"
                    android:paddingLeft="2dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:text="FECHA"
                    android:fontFamily="@font/mavenpro_bold"
                    android:textColor="@color/gray"
                    android:autoSizeMaxTextSize="17dp"
                    android:autoSizeMinTextSize="10dp"
                    android:autoSizeTextType="uniform"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtHestatus"
                    android:layout_width="100dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:autoSizeMaxTextSize="17dp"
                    android:autoSizeMinTextSize="10dp"
                    android:autoSizeTextType="uniform"
                    android:text="ESTATUS"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/mavenpro_regular"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtHfecha"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:autoSizeMaxTextSize="17dp"
                    android:autoSizeMinTextSize="10dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/mavenpro_regular"
                    android:gravity="left"
                    android:paddingLeft="2dp"
                    android:text="FECHA"
                    android:textColor="@color/gray"
                    android:textSize="14dp" />
            </LinearLayout>


            <TextView
            android:id="@+id/txtHdescripcionT"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:gravity="left"
            android:text="DESCRIPCION"
                android:fontFamily="@font/mavenpro_bold"
                android:textColor="@color/gray"
            android:ellipsize="end"
            android:maxLines="1"

            android:autoSizeMaxTextSize="17dp"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeTextType="uniform"
            android:textSize="14dp" />
            <TextView
                android:id="@+id/txtHdescripcion"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:gravity="left"
                android:text="DESCRIPCION"
                android:fontFamily="@font/mavenpro_regular"
                android:textColor="@color/gray"
                android:ellipsize="end"
                android:maxLines="1"
                android:autoSizeMaxTextSize="17dp"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeTextType="uniform"
                android:textSize="14dp" />

            <TextView
            android:id="@+id/txtHobservacionesT"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:gravity="left"
                android:fontFamily="@font/mavenpro_bold"
            android:text="OBSERVACIONES"
                android:textColor="@color/gray"
            android:autoSizeMaxTextSize="17dp"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeTextType="uniform"
            android:textSize="14dp" />
            <TextView
                android:id="@+id/txtHobservaciones"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:gravity="left"
                android:fontFamily="@font/mavenpro_regular"
                android:text="OBSERVACIONES"
                android:textColor="@color/gray"
                android:autoSizeMaxTextSize="17dp"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeTextType="uniform"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
