<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="235dp"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/screen3x"
        android:scaleType="centerCrop"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="235dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/ocultarmenu"
                android:layout_width="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_atras2"
                />
        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="138dp"
                        android:layout_height="138dp"
                        android:src="@drawable/ic_circulo_relleno2"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/perfil_facebook2"
                        android:layout_width="130dp"
                        android:layout_marginTop="4dp"
                        android:layout_height="130dp"
                        android:foregroundGravity="center"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_usuario2"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/editarUsuario"
                        android:layout_width="35dp"
                        android:visibility="gone"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        android:background="@drawable/vista_contenedorredondo2"
                        android:src="@drawable/ic_lapiz"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="90dp"
                        />
                </RelativeLayout>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/name_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usuario"
                android:textSize="20dp"
                android:fontFamily="@font/mavenpro_bold"
                android:textColor="@color/blanco"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>

