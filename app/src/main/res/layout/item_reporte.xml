<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/fotoImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:baseline="@dimen/cardview_default_radius"
                    android:scaleType="centerCrop"
                    android:background="@drawable/icon_ra_o_1024"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/txtTipo"
                    android:layout_width="100dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:autoSizeMaxTextSize="17dp"
                    android:autoSizeMinTextSize="10dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/mavenpro_bold"
                    android:text="ALCANTARILLA"
                    android:textColor="@color/purple"
                    android:textSize="14dp"
                    android:textStyle="bold" />
                <TextView

                    android:layout_width="15dp"
                    android:layout_height="23dp"
                    android:layout_weight="0"
                     />

                <TextView
                    android:id="@+id/txtestatus"
                    android:layout_width="100dp"
                    android:layout_height="23dp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:text="REPORTADO"
                    android:fontFamily="@font/mavenpro_bold"
                    android:textColor="@color/purple"
                    android:autoSizeMaxTextSize="17dp"
                    android:autoSizeMinTextSize="10dp"
                    android:autoSizeTextType="uniform"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:id="@+id/txtDireccion"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:gravity="left"
                android:text="Direccion"
                android:fontFamily="@font/mavenpro_regular"
                 android:textColor="@color/purple"
                android:ellipsize="end"
                android:maxLines="1"

                android:autoSizeMaxTextSize="17dp"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeTextType="uniform"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:gravity="left"
                android:fontFamily="@font/mavenpro_regular"
                android:text="Fecha"
                android:textColor="@color/purple"
                android:autoSizeMaxTextSize="17dp"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeTextType="uniform"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
